    <!-- 버튼 색 변경이 안된 문제 해결: MaterialComponents -> AppCompat -->
    <style name="Theme.MyPetCare" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item><!-- button background color -->
        <item name="colorPrimaryVariant">@color/representativeColor</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/representativeColor</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item><!-- text color -->
        <item name="android:textSize">16sp</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- timePickerStyle : spinner -->
        <item name="android:timePickerStyle">@style/MyTimePickerTheme</item>
    </style>

    <!-- timePickerStyle : spinner -->
    <style name="MyTimePickerTheme" parent="android:Widget.Material.Light.TimePicker">
        <item name="android:timePickerMode">spinner</item>
    </style>

    <style name="Theme.MyPetCare.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="dialog_fullscreen" parent="Theme.AppCompat.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="Theme.MyPetCare.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MyPetCare.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>