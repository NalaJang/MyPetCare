<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp" >

        <shape android:shape="rectangle" >

            <!-- 테두리의 두께와 색상 -->
            <stroke
                android:width="1dp"
                android:color="@color/representativeColor" />
            <!-- 배경색 -->
            <solid android:color="@color/white" />

            <corners android:radius="20dp" />
        </shape>
    </item>

    <item android:state_pressed="false"
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp" >

        <shape android:shape="rectangle" >

            <!-- 테두리의 두께와 색상 -->
            <stroke
                android:width="1dp"
                android:color="@color/representativeColor" />
            <!-- 배경색 -->
            <solid android:color="@color/representativeColor" />

            <corners android:radius="20dp" />
        </shape>
    </item>
</selector>